<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:vm="using:PockitBook.ViewModels"
    x:DataType="vm:AccountProjectionViewModel"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvs="using:LiveChartsCore.SkiaSharpView.Avalonia"
    x:Class="PockitBook.Views.AccountProjectionView">
    <Grid RowDefinitions="*,*" ColumnDefinitions="*,Auto">
        <lvs:CartesianChart
            Grid.Column="0"
            Grid.Row="0"
            Grid.RowSpan="2"
            Series="{Binding Series}"
            Title="{Binding Title}"
            XAxes="{Binding XAxes}"
            >
        </lvs:CartesianChart>

        <TextBox 
            Grid.Column="1" 
            Grid.Row="0"
            Watermark="Enter your current balance"
            Text="{Binding AccountBalance}"
            />
    </Grid>
</UserControl>