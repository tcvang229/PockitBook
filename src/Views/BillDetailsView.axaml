<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:vm="using:PockitBook.ViewModels"
    x:DataType="vm:BillDetailsViewModel"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PockitBook.Views.BillDetailsView">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <TextBlock Text="{Binding UrlPathSegment}" />
        <Grid RowDefinitions="*,*">
            <Grid ColumnDefinitions="*,*,*,*" RowDefinitions="*,*">
                <TextBlock 
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Name of Bill"/>
                <TextBlock 
                    Grid.Column="1"
                    Grid.Row="0"
                    Text="Day of Month"/>
                <TextBlock 
                    Grid.Column="2"
                    Grid.Row="0"
                    Text="Amount Due"/>
                <Button 
                    Grid.Column="3"
                    Grid.Row="0"
                    Name="DeleteAllBillsButton"
                    Content="Remove All Bills"/>
                <TextBox 
                    Grid.Column="0"
                    Grid.Row="1"
                    Watermark="E.g., Health Insurance Bill"
                    Text="{Binding NameOfNewBill}" />
                <TextBox 
                    Grid.Column="1"
                    Grid.Row="1"
                    Watermark="E.g., 21"
                    Text="{Binding DueDay}"/>
                <TextBox 
                    Grid.Column="2"
                    Grid.Row="1"
                    Watermark="E.g., 87.05"
                    Text="{Binding AmountDue}"/>
                <Button 
                    Grid.Column="3"
                    Grid.Row="1"
                    Name="AddBillButton" 
                    Content="Add Bill"/>
            </Grid>
            <DataGrid 
                Grid.Row="1"
                ItemsSource="{Binding BasicBills}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name of Bill" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Due Day" Binding="{Binding DueDayOfMonth}"/>
                    <DataGridTextColumn Header="Amount Due" Binding="{Binding AmountDue}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>
</UserControl>